<h3 class="center-align">Destinations needing approval</h3>
<div class="row col s12">
  {{#each locations}} 
    {{#unless approved}}
      <div class="card sticky-action col s12 m6" style="margin:10px; width:300px; height: 350px">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="{{this.image}}">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4" style="font-size: 23px">{{this.destination}}
            <i class="material-icons right">more_vert</i>
          </span>
          <p>
            <a target="_blank" href="{{this.website}}">Website</a>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{this.destination}}
            <i class="material-icons right">close</i>
          </span>
          <p>Address:</p>
          <p>{{this.address}}</p>

          <p>Phone Number:</p>
          <p>{{this.phoneNumber}}</p>

          <p>Destination Description:</p>
          <p>{{this.description}}</p>
        </div>
        <div class="row col s12">
          {{> approveButton}} {{> discardButton}} {{> editButton}}
        </div>
      </div>
      <!-- Modal Structure -->
      <div id="modal{{ id }}" class="modal">
        <div id="{{ id }}" class="modal-content">
          <h4>Edit {{this.destination}}</h4>
          <div class="row">
            <form id="modalEditForm" class="col s12">
              <div class="row modal-form-row">
                <div class="input-field col s12">
                  <input id="modal_destination_name" type="text" value="{{this.destination}}">
                  <label for="destination_name">Destination Name (Required)</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="modal_destination_address" type="text" required value="{{this.address}}">
                  <label for="destination_address">Destination Address (Required)</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="modal_destination_phoneNumber" type="tel" pattern="\d{3}[\-]\d{3}[\-]\d{4}" title="Phone Number Format: 123-456-7899"
                    class="validate" value={{this.phoneNumber}}>
                  <label for="destination_phoneNumber" data-error="Please enter a valid phone number Format: 123-456-7899" data-success="Valid">Phone Number &nbsp Format: 123-456-7899</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="modal_destination_image" type="url" title="URL Format: https://example.image.com" class="validate" value="{{this.image}}">
                  <label for="destination_image" data-error="Please submit a url for image Format: https://example.image.com" data-success="Valid">Image &nbsp URL Format: https://example.image.com/image_name.jpg</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <input id="modal_destination_website" type="url" title="URL Format: https://example.website.com" class="validate" value="{{this.website}}">
                  <label for="destination_website" data-error="Please submit a url for website Format: https://example.website.com" data-success="Valid">Website &nbsp URL Format: https://example.website.com</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12">
                  <textarea id="modal_destination_description" title="Description of destination being Requested" class="materialize-textarea">{{this.description}}</textarea>
                  <label for="destination_description">Destination Description</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col s12 m6" required value={{this.category}}>
                  <select multiple>
                    <option value="" disabled selected>Choose all that apply</option>
                    {{#if this.family_friendly}}
                      <option value="1" selected>Family Friendly</option>
                    {{/if}} 
                    {{#unless this.family_friendly}}
                      <option value="1">Family Friendly</option>
                    {{/unless}}

                    {{#if this.outdoor}}
                      <option value="2" selected>Outdoor</option>
                    {{/if}} 
                    {{#unless this.outdoor}}
                      <option value="2">Outdoor</option>
                    {{/unless}}

                    {{#if this.theme_park}}
                      <option value="3" selected>Theme Park</option>
                    {{/if}} 
                    {{#unless this.theme_park}}
                      <option value="3">Theme Park</option>
                    {{/unless}} 

                    {{#if this.museum}}
                      <option value="4" selected>Museum</option>
                    {{/if}}
                    {{#unless this.museum}}
                      <option value="4">Museum</option>
                    {{/unless}}

                    {{#if this.beach}}
                      <option value="5" selected>Beach</option>
                    {{/if}}
                    {{#unless this.beach}}
                      <option value="5">Beach</option>
                    {{/unless}}

                    {{#if this.entertainment}}
                      <option value="6" selected>Entertainment</option>
                    {{/if}}
                    {{#unless this.entertainment}}
                      <option value="6">Entertainment</option>
                    {{/unless}}

                    {{#if this.restaurant}}
                      <option value="7" selected>Restaurant</option>
                    {{/if}}
                    {{#unless this.restaurant}}
                      <option value="7">Restaurant</option>
                    {{/unless}}
                  </select>
                  <label>Destination Categories (Required)</label>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button class="btn waves-effect waves-light right" form="modalEditForm" id="submitModalEdit">Make Changes
            <i class="material-icons right">send</i>
          </div>

        </div>
        
      </div>
    {{/unless}}
  {{/each}}
</div>