    {{#each locations}}     
        {{#if approved}} 
            <div class="card sticky-action col s12 m6" style="margin:10px; width:300px; height: 320px">
                <div class="card-image waves-effect waves-block waves-light">
                    <img class="activator" src="{{this.image}}">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4" style="font-size: 23px">{{this.destination}}<i class="material-icons right">more_vert</i></span>
                    <p><a target="_blank" href="{{this.website}}">Website</a></p>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{this.destination}}<i class="material-icons right">close</i></span>
                    <p>Address:</p>
                    <p>{{this.address}}</p>

                    <p>Phone Number:</p>
                    <p>{{this.phoneNumber}}</p>

                    <p>Destination Description:</p>
                    <p>{{this.description}}</p>
                </div>
            </div>
        {{/if}}   
    {{/each}}    

</div>  